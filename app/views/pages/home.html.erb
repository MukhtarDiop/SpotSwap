<div class="hero-section">
  <div class="hero-content">
    <h1>Find Storage Space Anywhere</h1>
    <p>Rent unused garages, basements, and storage units from local owners. Safe, affordable, and convenient.</p>
    <div class="container my-4 d-flex justify-content-center">
      <div class="w-100" style="max-width: 600px;">
        <%= form_with url: spots_path, method: :get, local: true do |f| %>

          <!-- Category (Full Width) -->
          <div class="mb-3">
            <%= f.select :category, Spot::CATEGORIES, prompt: "Select category", class: "form-select px-3 py-2 w-100" %>
          </div>

          <!-- Location (Full Width) -->
          <div class="mb-3">
            <%= f.text_field :location, placeholder: "Enter location", class: "form-control px-3 py-2 w-100" %>
          </div>

          <!-- Dimensions (Length, Width, Height) -->
          <div class="row g-2 mb-3">
            <div class="col">
              <%= f.number_field :width, min: 0, placeholder: "Width (m)", class: "form-control px-3 py-2" %>
            </div>
            <div class="col">
              <%= f.number_field :length, min: 0, placeholder: "Length (m)", class: "form-control px-3 py-2" %>
            </div>
            <div class="col">
              <%= f.number_field :height, min: 0, placeholder: "Height (m)", class: "form-control px-3 py-2" %>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <%= f.submit "Search", class: "btn btn-primary px-4 py-2" %>
          </div>

        <% end %>
      </div>
  </div>
  </div>
</div>

<div class="featured-spots-section" style="max-width: 1100px; margin: 48px auto 0 auto;">
  <h2 class="featured-title text-center">Featured Storage Spaces</h2>
  <p class="featured-subtitle text-center">Discover popular spaces in your area</p>
  <div class="row justify-content-center">
    <% @spots.select { |spot| spot.photos.attached? }.first(6).each do |spot| %>
      <div class="col-md-4 col-sm-6 mb-4 d-flex align-items-stretch">
        <div class="card h-100 shadow-sm">
          <% if spot.photos.attached? %>
            <%= cl_image_tag(spot.photos.first.key, class: "card-img-top", crop: :fill, style: 'height: 240px; object-fit: cover;') %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary"><%= link_to(spot.title.presence || "Untitled Spot", spot_path(spot), class: "spot-title-link") %></h5>
            <p class="card-text text-muted mb-1"><%= spot.category.capitalize %></p>
            <p class="card-text"><%= truncate(spot.description, length: 60) %></p>
            <p class="card-text mb-1"><strong>Location:</strong> <%= spot.address %></p>
            <p class="card-text mb-2"><strong>Size:</strong> <%= spot.length %>m X <%= spot.width %>m X <%= spot.height %>m</p>
            <div class="mt-auto d-flex justify-content-between align-items-center">
              <span class="featured-spot-price text-success font-weight-bold" class="price-tag"><%= number_to_currency spot.rate %>/day</span>
              <%= link_to "Book", new_spot_booking_path(spot), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="cta-section">
  <h2>Ready to get started?</h2>
  <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary" %>
</div>

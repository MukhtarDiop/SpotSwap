<div class="spots-logo-container">
  <%= image_tag "https://res.cloudinary.com/dg5qvbxjp/image/upload/v1748375631/ChatGPT_Image_May_27_2025_at_02_53_12_PM_iz8dcr.png", alt: "Logo", class: "spots-logo" %>
</div>

<div class="hero-section">
  <div class="hero-content">
    <h1>Find Storage Space Anywhere</h1>
    <p>Rent unused garages, basements, and storage units from local owners. Safe, affordable, and convenient.</p>
    <%= form_with url: spots_path, method: :get, class: "d-flex flex-wrap gap-3 align-items-center", local: true do |f| %>
      <%= f.select :category, Spot::CATEGORIES, prompt: "Select category", class: "form-select rounded-pill px-3 py-2" %>

      <%= f.text_field :location, placeholder: "Enter location", class: "form-control rounded-pill px-3 py-2" %>

      <%= f.number_field :length,min: 0,placeholder: "Min length (m)", class: "form-control rounded-pill px-3 py-2" %>
      <%= f.number_field :width, min: 0,placeholder: "Min width (m)", class: "form-control rounded-pill px-3 py-2" %>
      <%= f.number_field :height,min: 0, placeholder: "Min height (m)", class: "form-control rounded-pill px-3 py-2" %>

      <%= f.submit "Search", class: "btn btn-primary rounded-pill px-4 py-2" %>
    <% end %>
    <div class="hero-stats">
      <div>
        <span class="stat-value">10,000+</span>
        <span class="stat-label">Storage Spaces</span>
      </div>
      <div>
        <span class="stat-value">50+</span>
        <span class="stat-label">Cities</span>
      </div>
      <div>
        <span class="stat-value">4.8★</span>
        <span class="stat-label">Average Rating</span>
      </div>
    </div>
  </div>
</div>

<div class="featured-spots-section">
  <h2 class="featured-title">Featured Storage Spaces</h2>
  <p class="featured-subtitle">Discover popular spaces in your area</p>
  <div class="featured-spots-slider row">
  
  <div class="featured-spots-container col-5">
    <% @spots.limit(6).each do |spot| %>
      <div class="featured-spot-card">
        <div class="featured-spot-photo">
           <%= cl_image_tag(spot.photos.first.key, class: "img-fluid rounded-top", crop: :fill) if spot.photos.attached? %>
        </div>
        <div class="featured-spot-info">
          <div class="featured-spot-header">
            <h2><%= link_to(spot.title.present? ? spot.title : "Untitled Spot", spot_path(spot), class: "spot-title-link") %></h2>
          </div>
          <div class="featured-spot-meta">★ <%= spot.description %> </div>
          <div class="featured-spot-meta">📍Lat: <%= spot.address %></div>
          <div class="featured-spot-desc">Size: <%= spot.length %>m X <%= spot.height %>m X <%= spot.width %>m </div>
           <div class="featured-spot-desc"><%= spot.category %></div>
          <div class="featured-spot-footer">
            <span class="price-tag"><%= number_to_currency spot.rate %>/day</span>
             <%= link_to "Book", new_spot_booking_path(spot), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
 
<div class="cta-section">
  <h2>Ready to get started?</h2>
  <button class="btn btn-light">Get Started</button>
</div>

<div class="container" style="max-width: 600px; margin: 0 auto;">
  <div class="spot-form-card" style="background: #fff; border-radius: 16px; box-shadow: 0 2px 12px rgba(0,0,0,0.07); padding: 32px 24px; margin-top: 32px;">
    <h1 style="font-size: 2rem; font-weight: 600; margin-bottom: 24px;">New Spot</h1>
    <%= simple_form_for @spot do |f| %>
      <div style="margin-bottom: 16px;">
        <%= f.input :title, input_html: { maxlength: 30, style: 'border-radius: 8px;' } %>
      </div>
      <div style="margin-bottom: 16px;">
        <%= f.input :description, input_html: { maxlength: 120, style: 'border-radius: 8px;' } %>
      </div>
      <div style="margin-bottom: 16px;">
        <%= f.input :address, input_html: { style: 'border-radius: 8px;' } %>
      </div>
      <div style="margin-bottom: 16px;">
        <%= f.input :photos, as: :file, input_html: { multiple: true, style: 'border-radius: 8px;' } %>
      </div>
      <div style="margin-bottom: 16px;">
        <%= f.input :category, as: :select, collection: Spot::CATEGORIES, input_html: { style: 'border-radius: 8px;' } %>
      </div>
      <div style="display: flex; gap: 12px; margin-bottom: 16px;">
        <%= f.input :length, input_html: { style: 'border-radius: 8px;' } %>
        <%= f.input :width, input_html: { style: 'border-radius: 8px;' } %>
        <%= f.input :height, input_html: { style: 'border-radius: 8px;' } %>
      </div>
      <div style="margin-bottom: 24px;">
        <%= f.input :rate, label: 'Price per night ($)', input_html: { style: 'border-radius: 8px;' } %>
      </div>
      <div style="text-align: right;">
        <%= f.button :submit, 'Create Spot', class: 'btn btn-primary', style: 'padding: 10px 28px; border-radius: 8px; font-size: 1.1rem;' %>
      </div>
    <% end %>
  </div>
</div>

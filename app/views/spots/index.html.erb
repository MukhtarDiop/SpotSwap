<div class="spots-page container">
  <h1 class="mb-4">Spots</h1>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <% @spots.each do |spot| %>
          <div class="col-md-6 mb-4 d-flex">
            <div class="card spot-card w-100">
              <div class="card-body">
                <%= cl_image_tag(spot.photos.first.key, class: "img-fluid rounded-top", crop: :fill) if spot.photos.attached? %>
                <h5 class="card-title"><%= link_to spot.title, spot_path(spot) %></h5>
                <p class="card-subtitle"><%= spot.category.capitalize %></p>
                <p class="card-text"><%= truncate(spot.description, length: 100) %></p>
              </div>
              <div class="card-footer d-flex justify-content-between align-items-center">
                <span class="price-tag">$<%= spot.rate %>/day</span>
                <%= link_to "Book", new_spot_booking_path(spot), class: "btn btn-primary btn-sm" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div
        class="map-container"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

<div class="spots-logo-container">
  <%= image_tag "https://res.cloudinary.com/dg5qvbxjp/image/upload/v1748375631/ChatGPT_Image_May_27_2025_at_02_53_12_PM_iz8dcr.png", alt: "Logo", class: "spots-logo" %>
</div>
<h1>Spots</h1>
<div class="row">
  <% @spots.each do |spot| %>
    <div class="col-md-4 mb-4">
      <div class="card spot-card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= link_to spot.description, spot_path(spot) %></h5>
          <p class="card-subtitle">
            <%= spot.category.capitalize %>
          </p>
          <p class="card-text"><%= truncate(spot.description, length: 100) %></p>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
          <span class="price-tag">$<%= spot.rate %>/day</span>
          <%= link_to "Book", spot_path(spot), class: "btn btn-outline-success btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


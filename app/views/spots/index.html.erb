<h1>Find a Spots</h1>
<h1>Spots</h1>

<%= simple_form_for :search, method: :get, html: { class: 'filter-form' } do |f| %>
  <div class="form-inputs">
    <%= f.input :address, label: 'Address', input_html: { value: params[:address] } %>

    <%= f.input :type, label: 'Type', input_html: { value: params[:type] } %>

    <%= f.input :rental_duration, label: 'Rental Duration', input_html: { value: params[:rental_duration] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Filter' %>
    <%= link_to 'Clear Filters', spots_path, class: 'button' %>
  </div>
<% end %>

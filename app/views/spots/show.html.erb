<div class="container">
    <h1>Spots </h1>
    <div class="mt-4">
        <%= cl_image_tag @spot.photo.key, height: 300, width: 200, crop: :fill%>
        <h2><%= @spot.description%></h2>
        <p>hosted by - <%= @spot.user.first_name%> <%= @spot.user.last_name%></p>
        <p>Location: <%= @spot.lat%> <%= @spot.long%></p>
        <p>Rate: <%= @spot.rate%> per day</p>
        <p>Dimensions: <%= @spot.length%>' X <%= @spot.width%>' X <%= @spot.height%>'  </p>
    </div>

</div>


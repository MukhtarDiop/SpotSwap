<% @bookings.each do |booking| %>
  <div class="border p-4 rounded mb-4 shadow">
    <p><strong>Spot:</strong> <%= booking.spot.description %></p>
    <p><strong>Renter:</strong> <%= booking.user.email %></p>
    <p><strong>Dates:</strong> <%= booking.start_date %> to <%= booking.end_date %></p>
    <p><strong>Status:</strong> <%= booking.status.capitalize %></p>

    <div class="mt-2 flex gap-2">
      <%= button_to "Approve", approve_booking_path(booking), method: :patch, class: "btn btn-success" %>
      <%= button_to "Decline", decline_booking_path(booking), method: :patch, class: "btn btn-outline" %>
    </div>
  </div>
<% end %>
  
<h1>Bookings for Your Spots</h1>

<% if @bookings.any? %>
  <table>
    <thead>
      <tr>
        <th>Spot Name</th>
        <th>Booked By</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.spot.name %></td>
          <td><%= booking.user.full_name %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.status.capitalize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No bookings found for your spots.</p>
<% end %>
